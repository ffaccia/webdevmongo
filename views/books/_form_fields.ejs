<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>

<div>
    <label for="author">Author</label>
    <select name="author">
    <% authors.forEach( author => { %>
        <% if (author.id === book.author) { %>
            <option length=40 selected label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %>
            <option length=40 label="<%= author.name %>" value="<%= author.id %>">
        <% } %>
    <% }) %>
    </select>
</div>

<div>
    <label for="publishDate">PublishDate</label>
    <input type="date" name="publishDate" 
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>

<div>
    <label for="pageCount">Num. Page</label>
    <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
</div>

<div>
    <label for="cover">Cover</label>
    <input type="file" name="cover" class="filepond">
</div>

<div>
    <label for="description">Description</label>
    <input type="textarea" name="description" rows="6" cols="50" value="<%= book.description %>">
</div>

